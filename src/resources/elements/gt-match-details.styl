.gt-md
    display flex
    flex-direction column
    margin var(--gt-default-margin)
    .gt-md-content
        display flex
        flex-grow 1
        flex-direction column
        align-items center
        text-align center
        overflow auto
    .gt-md-details-header
        margin-bottom 2rem
    .gt-md-join-info
        margin-bottom 2rem
    .gt-md-game-info
        margin-bottom 1rem
        > div:nth-child(2n)
            margin-bottom 1rem
    .gt-md-match-numbers
        text-align left
