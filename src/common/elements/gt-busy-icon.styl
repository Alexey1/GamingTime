@keyframes gt-bi-fading
    0%
        opacity 1
    50%
        opacity 0.5
    100%
        opacity 1

.gt-bi
    --gt-bi-fade-duration 2s
    display flex
    flex-direction column
    width 4rem
    height 4rem
    .gt-bi-half
        display flex
        flex-direction column
        flex-grow 1
        .gt-bi-row
            display flex
            flex-grow 1
            > div
                flex-grow 1
                margin 0.125rem
                border-radius 50%
                background-color var(--mdc-theme-primary)
                animation gt-bi-fading var(--gt-bi-fade-duration) infinite
            &:nth-child(1)
                div:nth-child(1)
                    animation-delay calc(-3 * var(--gt-bi-fade-duration) / 4)
                div:nth-child(2)
                    animation-delay calc(-2 * var(--gt-bi-fade-duration) / 4)
                div:nth-child(3)
                    animation-delay calc(-1 * var(--gt-bi-fade-duration) / 4)
            &:nth-child(2)
                div:nth-child(4)
                    animation-delay calc(-3 * var(--gt-bi-fade-duration) / 4)
                div:nth-child(3)
                    animation-delay calc(-2 * var(--gt-bi-fade-duration) / 4)
                div:nth-child(2)
                    animation-delay calc(-1 * var(--gt-bi-fade-duration) / 4)
